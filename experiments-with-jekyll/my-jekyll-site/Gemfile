# frozen_string_literal: true

source "https://rubygems.org"

# Jekyll Theme & Core
gem 'jekyll', '~> 4.3.0'
gem 'jekyll-theme-chirpy', '~> 6.4', '>= 6.4.2'

# Sass
gem 'jekyll-sass-converter', '~> 2.0'
gem 'sassc', '~> 2.4'

# Feed generation
gem 'jekyll-feed', '~> 0.15'

# Webrick (for development server)
gem 'webrick', '~> 1.7'

# Testing
group :test do
  gem 'html-proofer', '~> 4.4'  # HTML validation during test phase
end

# Windows & JRuby optimizations
platforms :mingw, :x64_mingw, :mswin, :jruby do
  gem 'tzinfo', '>= 1', '< 3'   # Timezone data for Windows/JRuby
  gem 'tzinfo-data'  # Timezone data for JRuby
end

# Performance booster for watching directories on Windows
gem 'wdm', '~> 0.1.1', platforms: [:mingw, :x64_mingw, :mswin]

# For JRuby platform, lock http_parser.rb to v0.6.x
gem 'http_parser.rb', '~> 0.6.0', platforms: [:jruby]
